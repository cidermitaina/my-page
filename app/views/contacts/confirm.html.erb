<section class="section contacts">
  <div class="container">
    <h1 class="title has-text-left is-2">Contact</h1>
    <h2 class="subtitle has-text-left is-6">
      確認画面
    </h2>
    <%= form_for @contact, :url => contact_thanks_path do |f| %>
    <div class="control form-area column is-half">
      <div class="field">
        <label class="label">Name</label>
        <div class="control">
          <%= f.hidden_field :name %><%= @contact.name %>
        </div>
      </div>
      <div class="field">
        <label class="label">Username</label>
        <div class="control has-icons-left has-icons-right">
          <%= f.hidden_field :username %><%= @contact.username %>
        </div>
      </div>
      <div class="field">
        <label class="label">Email</label>
        <div class="control has-icons-left has-icons-right">
          <%= f.hidden_field :email %><%= @contact.email %>
        </div>
      </div>
      <div class="field">
        <label class="label">Subject</label>
        <div class="control">
          <div class="select">
            <select>
              <option>Select dropdown</option>
              <option>With options</option>
            </select>
          </div>
        </div>
      </div>
      <div class="field">
        <label class="label">Message</label>
        <div class="control">
          <%= f.hidden_field :message %><%= @contact.message %>
        </div>
      </div>
      <div class="field is-grouped">
        <div class="control">
          <%# <button class="button is-link">Submit</button> %>
          <%= f.submit 'Submit', class: 'button is-link' %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</section>
